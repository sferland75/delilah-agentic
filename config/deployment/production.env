# Production Environment Configuration

# Server Configuration
PORT=8080
HOST=0.0.0.0
NODE_ENV=production

# Monitoring Service
MONITORING_RETENTION_DAYS=30
MONITORING_CHECK_INTERVAL=60000
MONITORING_ALERT_BUFFER=1000

# Adaptive Optimization
OPTIMIZER_MIN_LEARNING_RATE=0.01
OPTIMIZER_MAX_LEARNING_RATE=0.3
OPTIMIZER_UPDATE_INTERVAL=5000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=15000
WS_RECONNECT_INTERVAL=3000

# Notification Service
NOTIFICATION_QUEUE_SIZE=10000
NOTIFICATION_RETRY_ATTEMPTS=5
NOTIFICATION_RETRY_DELAY=10000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined