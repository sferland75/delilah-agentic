{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist-report",
    "rootDir": "./src/components/ReportGeneration",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/components/ReportGeneration/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}